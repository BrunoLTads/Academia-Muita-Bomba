run = "mcs -out:main.exe 'Academia_Muita_Bomba/main.cs' 'Academia_Muita_Bomba/registro.cs' 'Academia_Muita_Bomba/matricula.cs' 'Academia_Muita_Bomba/sistema.cs' ; mono main.exe"

hidden = ["bin", "obj"]

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[nix]
channel = "stable-21_11"

[languages.csharp]
pattern = "**/*.cs"

  [languages.csharp.languageServer]
  start = ["omnisharp", "--languageserver"]
